<h1>Edicion de Post</h1>
<hr>
<br>

  <form action="/post_edit" method="post" id="form_ed">
    <h4><label for="post_title">Titulo:</label></h4>

    <input type ="text" id="post_title" name="title" value="<%= @post_datos.titulo %>" style="width: 100%">

    <h4><label for="post_message">Post:</label></h4>
    <textarea id="post_message" name="message" style="width: 100%;height: 150px"><%= @post_datos.mensaje %></textarea>
    <br>

    <h4><label for="post_tags">Tags:</label></h4>
    <input id="postst_tags" name="post[tags]" style="width: 100%" placeholder="tag1, tag2, otro tag, cuarto tag" value="<%= @tag_lista.join(" , ")%>" readonly>

    <br><br>

    <input type="hidden" name="dato" value="<%= @dato %>">
    <input type="submit" value="Guardar Post!">
  </form>
<br>
<hr>